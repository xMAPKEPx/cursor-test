{
  "services": {
    "museum-app": {
      "build": {
        "dockerfile": "Dockerfile",
        "context": "."
      },
      "ports": {
        "http": {
          "port": 80,
          "expose": true
        }
      },
      "resources": {
        "cpu": 0.5,
        "memory": 1024
      },
      "scaling": {
        "min": 1,
        "max": 3
      },
      "healthCheck": {
        "path": "/",
        "port": 80,
        "initialDelay": 10
      }
    }
  }
} 